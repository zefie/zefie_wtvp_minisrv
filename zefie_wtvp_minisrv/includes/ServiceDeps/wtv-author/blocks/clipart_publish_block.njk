{# Clipart block template for publishing #}
<p>
    <TABLE nocolor width="100%">
        {% if thisblock.title %}
        <TR>
            <TD align="center">
                <font color="{{ headcol }}">
                    <H3>{{ thisblock.title }}</H3>
                </font>
            </TD>
        </TR>
        {% endif %}
        <TR>
            <td>
                <CENTER>
                    <IMG SRC="{{ thisblock.photo | base64_decode }}">
                </CENTER>
            </TD>
        </TR>
        <TR>
            <TD valign="top">
                {% if thisblock.caption %}
                {{ thisblock.caption }}
                {% endif %}
            </TD>
        </TR>
    </TABLE>
</p>
